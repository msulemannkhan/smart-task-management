# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5433/smart_task_management"
DIRECT_URL="postgresql://postgres:password@localhost:5433/smart_task_management"

# Supabase (get from your Supabase dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Security (generate a strong secret key)
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins
BACKEND_CORS_ORIGINS=http://localhost:8086,http://localhost:5173
