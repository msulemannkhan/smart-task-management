# Backend Environment Configuration Template
# Copy this file to backend/.env and fill in your actual values

# Database Configuration - Local PostgreSQL (Docker)
SMART_TASK_DB_PASSWORD=your-secure-password

# Local PostgreSQL database connection (currently active)
DATABASE_URL="postgresql://postgres:your-secure-password@localhost:5433/smart_task_management"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres:your-secure-password@localhost:5433/smart_task_management"

# Supabase Configuration (get these from your Supabase dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Security Configuration (generate a strong secret key)
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (Frontend URLs)
BACKEND_CORS_ORIGINS=http://localhost:8086,http://localhost:5173,http://localhost:5174,http://127.0.0.1:8086,http://127.0.0.1:5174
